{
  "name": "software-testing-assignment",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "type": "commonjs",
  "scripts": {
    "pretest": "mkdir -p .nyc_output",
    "test": "jest --coverage",
    "coveralls": "nyc report --reporter=text-lcov | coveralls --github-token=${{ secrets.COVERALLS_REPO_TOKEN }}"
  },
  
  
  
  
  
  "author": "",
  "license": "MIT",
  "dependencies": {
    "openai": "^4.20.1"
   },
   "jest": {
    "testEnvironment": "node",
    "collectCoverage": true,
    "coverageDirectory": "coverage",
    "testMatch": [
      "**/*.test.js"
    ],
    "transform": {
      "^.+\\.js$": "babel-jest"
    },
    "moduleFileExtensions": ["js", "json", "jsx", "ts", "tsx", "node"],
    "modulePathIgnorePatterns": ["<rootDir>/node_modules/", "<rootDir>/build/"],
    "modulePaths": ["<rootDir>"]
  },
  
  "nyc": {
    "reporter": [
      "text",
      "lcov"
    ],
    "all": true,
    "extension": [
      ".js",
      ".jsx",
      ".ts",
      ".tsx"
    ],
    "exclude": [
      "**/*.test.js",
      "**/*.test.jsx",
      "**/*.test.ts",
      "**/*.test.tsx"
    ],
    "check-coverage": true,
    "lines": 80,
    "statements": 80,
    "functions": 80,
    "branches": 80
  },
  
  "devDependencies": {
    "@babel/core": "^7.23.5",
    "@babel/preset-env": "^7.23.5",
    "babel-jest": "^29.7.0",
    "jest": "^29.7.0",
    "nyc":"^15.1.0"
  }
}
